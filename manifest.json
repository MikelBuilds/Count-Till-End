{
  "manifest_version": 3,
  "name": "Count till End",
  "version": "1.0.0",
  "description": "Replace new tab with a beautiful countdown timer to your important events",
  "chrome_url_overrides": {
    "newtab": "new_tab.html"
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "count-till-end@example.com"
    }
  }
} 